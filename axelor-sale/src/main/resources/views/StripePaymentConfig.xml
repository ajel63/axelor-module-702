<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_6.1.xsd">

  <grid name="stripe-payment-config-grid" title="StripePayment Config"
    model="com.axelor.apps.sale.db.StripePaymentConfig">
    <field name="baseUrl"/>
    <field name="apiKey"/>
    <field name="retrivePaymentBaseUrl"/>
    <field name="refundBaseUrl"/>
  </grid>

  <form name="stripe-payment-config-form" title="StripePayment Config"
    model="com.axelor.apps.sale.db.StripePaymentConfig">
    <panel name="mainPanel">
      <field name="baseUrl"/>
      <field name="apiKey"/>
      <field name="retrivePaymentBaseUrl" required="true"/>
      <field name="refundBaseUrl"/>
    </panel>
  </form>

</object-views>
